!!!
%html
  %head
    %title Cremalab
    %meta{ charset: "UTF-8" }
    %meta{ content: "initial-scale=1.0, user-scalable=no", name: "viewport"}
    %meta{ content: "yes", name: "apple-mobile-web-app-capable"}
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag    "admin", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "https://raw.github.com/ajaxorg/ace-builds/master/src-min-noconflict/ace.js"
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = javascript_include_tag "admin", "data-turbolinks-track" => true
    = csrf_meta_tags
%body.layout-admin
  .sideBarToggle.sub-main.icon-list
  %aside.layout-sidebar
    = render "layouts/site_navigation"
  %section.layout-main-wrapper
    .layout-main
      %main.layout-main-content
        = render "layouts/user_menu" if current_user
        .layout-content
          = yield
