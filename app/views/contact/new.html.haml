- title "Contact"
%header.layout-header.sub-contact
  .layout-content
    %h1 Get in touch with us.
.layout-grid.sub-four
  .gridBlock
    .gridBlock-size
      .gridBlock-size-wrap
        %a.gridBlock-size-wrap-content.sub-red{href: map_url(t("address"))}
          .gridBlock-content-icon
            .icon-location
  .gridBlock
    .gridBlock-size
      .gridBlock-size-wrap
        %a.gridBlock-size-wrap-content.sub-orange{href: "tel:#{t('phone')}"}
          .gridBlock-content-icon
            .icon-mobile
  .gridBlock
    .gridBlock-size
      .gridBlock-size-wrap
        %a.gridBlock-size-wrap-content.sub-yellow{href: "mailto:#{t('email')}"}
          .gridBlock-content-icon
            .icon-mail
  .gridBlock
    .gridBlock-size
      .gridBlock-size-wrap
        %a.gridBlock-size-wrap-content.sub-green{href: t('social_links.mailchimp'), target: "_blank"}
          .gridBlock-content-icon
            .icon-megaphone
  .gridBlock
    .gridBlock-size
      .gridBlock-size-wrap
        %a.gridBlock-size-wrap-content.sub-blue{href: t('social_links.facebook'), target: "_blank"}
          .gridBlock-content-icon
            .icon-facebook
  .gridBlock
    .gridBlock-size
      .gridBlock-size-wrap
        %a.gridBlock-size-wrap-content.sub-indigo{href: t('social_links.twitter'), target: "_blank"}
          .gridBlock-content-icon
            .icon-twitter
  .gridBlock
    .gridBlock-size
      .gridBlock-size-wrap
        %a.gridBlock-size-wrap-content.sub-violet{href: t('social_links.linked_in'), target: "_blank"}
          .gridBlock-content-icon
            .icon-linked_in
  .gridBlock
    .gridBlock-size
      .gridBlock-size-wrap
        %a.gridBlock-size-wrap-content.sub-brown{href: t('social_links.instagram'), target: "_blank"}
          .gridBlock-content-icon
            .icon-instagram
.layout-content.sub-narrow
  %h2.sub-centered
    Hire us.

  = form_for @message, remote: true, url: contact_path do |f|
    - if @message.errors.any?
      .error_messages
        %h5
          = pluralize(@message.errors.count, "error")
          prohibited this message from being saved:
        %p
          %ul
            - @message.errors.full_messages.each do |msg|
              %li= msg

    = f.text_field :name, placeholder: "My friends call me..."
    = f.text_field :email, placeholder: "I respond to emails at..."
    = f.text_area :content, :rows => 5, placeholder: "Iâ€™d like to talk about..."
    = f.submit "And Go!", class: "button sub-outline"